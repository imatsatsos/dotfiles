#!/bin/sh
#
# Kill a process using rofi

. "$HOME"/.local/bin/menus.conf

process_name=$(ps -u "$USER" -F | dmenu -i -l 10 -p "Which process to kill? ðŸ”« " $dmenu_args | awk '{print $11}')
if [ -n "$process_name" ]; then
	pkill "$process_name" && notify-send -u low "Process $process_name killed"
fi
