#!/usr/bin/env bash
## Copyright (C) 2020-2023 Aditya Shakya <adi1090x@gmail.com>

DIR="$HOME/.local/bin/"

rofi_command="rofi -theme /$HOME/.config/rofi/theme_asroot.rasi"

# Apps
terminal="Terminal"
files="File Manager"
editor="Geany"
clifm="Ranger"
vim="Vim"

# Variable passed to rofi
options="$terminal\n$files\n$editor\n$clifm\n$vim"
term=st

# Functions
chosen="$(echo -e "$options" | $rofi_command -p "Run as root:" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        asroot "$term -T term_as_root"
        ;;
    $files)
        asroot 'dbus-run-session nautilus'
        ;;
    $editor)
        asroot geany
        ;;
    $clifm)
        asroot "$term -T term_as_root -e ranger"
        ;;
    $vim)
        asroot "$term -T term_as_root -e vim"
        ;;
esac

