#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(realpath /sbin/init)" in
	*runit*) hib="sudo -A zzz -Z"; slp="sudo -A zzz -z" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p 0" ;;
esac

cmds="\
ðŸ”’ Lock Screen	i3exit lock
ðŸšª Logout	kill -TERM $(pidof -s dwm)
ðŸ’¤ Sleep	${slp:-sudo -A systemctl suspend}
ðŸ”„ Reboot	${reb:-sudo -A reboot}
ðŸ’» Power Off	${shut:-sudo -A shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -b -i)" || exit 1

eval "$(echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-)"
