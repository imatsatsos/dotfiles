#!/bin/env sh
# Outputs the current date and time

[ -e "$HOME/.local/bin/status/sbcol" ] && . "$HOME"/.local/bin/status/sbcol

case $BLOCK_BUTTON in
  1) dunst_cal curr & ;;
  4) dunst_cal prev & ;;
  5) dunst_cal next & ;;
esac

## IDEA 1
output=$(date '+%a %d, %H:%M')
#./statuscolwrap "$output" "$1" "$2"

## ORIG
# if [ -z "$border" ]; then
#   date '+%a %d, %H:%M'
# else
#   echo "<span bgcolor=\"$border\" fgcolor=\"#ffffff\"> $(date '+%a %d, %H:%M') </span>"
# fi

display "$output" || echo "$output"
