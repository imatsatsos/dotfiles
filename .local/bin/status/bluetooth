#!/bin/env sh
# Outputs bluetooth status (on/off) and if connected, the name of the device

# input mac address of devices, find with bluetoothctl list Paired
headset="1C:E6:1D:56:18:C3"
speaker="F8:DF:15:B2:38:7A"

# Checks if bluetooth controller is powered on
power_on() {
    if bluetoothctl show | grep -q "Powered: yes"; then
        return 0
    else
        return 1
    fi
}

# Toggles power state
toggle_power() {
    if power_on; then
        bluetoothctl power off >/dev/null
        notify-send -t 2000 "󰂲 Bluetooth off"
    else
        if rfkill list bluetooth | grep -q 'blocked: yes'; then
            rfkill unblock bluetooth && sleep 3
        fi
        bluetoothctl power on >/dev/null
        notify-send -t 2000 " Bluetooth on"
    fi
}

# Checks if a device is connected
device_connected() {
    device_info=$(bluetoothctl info "$1")
    if echo "$device_info" | grep -q "Connected: yes"; then
        return 0
    else
        return 1
    fi
}

case $BLOCK_BUTTON in
  2) toggle_power ;;
  1) setsid -f rofi-bluetooth & ;;
esac

if power_on; then
  label=''
  if device_connected "$headset"; then
    output='󰥰 GB+'
  elif device_connected $speaker; then
    output='󰦢 JBL'
  fi
else
  label='󰂲'
fi

. "$HOME"/.local/bin/status/sbcol
display "$output" "$fg" "$label"
# if [ -n "$border" ]; then
#   printf "<span color='%s'>%s</span>" "$border" "$output"
# else
#   printf "%s" "$output"
# fi
