#!/bin/sh
# script will create a tar backup of $PWD folder
# if it is run in home it will exclude files and folders

tar -cpzf backup.tar.gz \
--exclude="backup.tar.gz" \
--exclude=.debug \
--exclude=.gvfs \
--exclude=Applications \
--exclude=Downloads \
--exclude=Gitrepos \
--exclude="MATLAB Add-Ons" \
--exclude=.cache \
--exclude=.dbus \
--exclude=.icons \
--exclude=.java \
--exclude=.local \
--exclude=.mozilla \
--exclude=.nmcli-history \
--exclude=.nv \
--exclude=.pki \
--exclude=.pulse-cookie \
--exclude=.steam \
--exclude=.steampath \
--exclude=.steamid \
--exclude=.var \
--exclude=.wine \
--warning=no-file-changed .

notify-send "Backup completed:" "$(pwd)"
