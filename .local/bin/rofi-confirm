#!/usr/bin/env sh
#
# Rofi powered menu to prompt a message and get a yes/no answer.
# Uses: rofi

yes='Do as I say'
no='Cancel'
query='Are you sure?'
theme='theme_confirm.rasi'

while [ $# -ne 0 ]; do
    case "$1" in
        -y | --yes)
            [ -n "$2" ] && yes="$2" || yes=''
            shift
            ;;

        -n | --no)
            [ -n "$2" ] && no="$2" || no=''
            shift
            ;;

        -q | --query)
            [ -n "$2" ] && query="$2"
            shift
            ;;
        -t | --theme)
            [ -n "$2" ] && theme="$2"
            shift
            ;;
    esac
    shift
done

chosen=$(printf '%s;%s' "$yes" "$no" | rofi \
           -dmenu \
           -i \
           -no-fixed-num-lines \
           -no-default-config \
           -theme $theme \
           -p "$query" \
           -sep ';' \
           -selected-row 1)

case "$chosen" in
    "$yes") exit 0 ;;
    *)      exit 1 ;;
esac

