@import "colors.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"JetBrains Mono Medium 12";
}

window {
    width:      			260px;
    padding:    			20px;
    border:					3px;
    border-radius:          8px;
    border-color:           @border;
    location:               center;
    x-offset:               0;
    y-offset:               -5%;
}

entry {
    expand: 				true;
    width: 					150px;
    text-color:				@foreground;
}
