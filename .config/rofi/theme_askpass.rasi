* {
    bg:          #24242496;
	  bg-sel:      #5a84bcc8;
    brd:         #7e7e7e80;
	  txt:         #eeeeee;
    background-color: transparent;
    text-color:       @txt;
    border-color:     @brd;
    font: "Sans 16";
}

window {
    width:      		300px;
    padding:    		20px;
    border:					2px;
    border-radius:  12px;
    background-color: @bg;
    location:       center;
    x-offset:       0;
    y-offset:       -3%;
}

entry {
    expand: 				true;
}
