########################
## Sway config (v1.8) ##
########################
### COLORS
## nightfox (imachina)
set $bg       #12121f
set $txt      #d4d7ff
set $txtb     #222236
set $focusbrd #8783d9
set $focusind #759eea
set $urgbrd   #d95177
set $urgbg    #d95177

set $wfbrd    #6d98e8
set $wfbg     #759eea
set $wftxt    #222236
set $wabg     #8783d9
set $wabrd    #29293f
set $winabrd  #222236
set $sep      #8783d9
set $wind     #fcf39c

## Select Fonts
set $font ShureTechMono Nerd Font 11
set $font_bar ShureTechMono Nerd Font 11

## Select Border style (normal | pixel <px> | none)
set $border_style pixel 2
set $border_style_float normal 0

## Select Gaps size
set $gaps_in_size 6
set $gaps_out_size 0

## Select Terminal
set $term alacritty

## Select File Manager
set $files pcmanfm

## Select Launcher
set $launcher "~/.local/bin/rofi-launcher"

## Select Alt tabber
set $window_tabber "rofi -show window -theme ~/.config/rofi/theme_main-noicons.rasi"

## Select Power menu
set $power_menu "~/.local/bin/rofi-power"

## Select default workspace layout (default|stacking|tabbed)
workspace_layout default
workspace_auto_back_and_forth yes

### Output config
## You can get the names of your outputs by running: swaymsg -t get_outputs
output * bg ~/.config/background fill
output Virtual-1 resolution 1600x900 position 0 0
focus output Virtual-1
 
### Idle config
exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'
 
### Input config         
## You can get the names of your inputs by running: swaymsg -t get_inputs
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#       accel_profile "flat"
#   }
input "type:keyboard" {
    repeat_delay 280
    repeat_rate 40
    xkb_layout us,gr
    xkb_model pc105
    xkb_options grp:alt_shift_toggle,caps:escape
}
 
