########################
## i3 config file (v4) #
########################

# Select i3 and bar font
#Liga SFMono Nerd Font Bold 11
#Source Code Pro Bold 11
set $font FiraCode Nerd Font 11
set $font_bar $font

# Select border style
set $border_style pixel 3
set $border_style_float normal 1

# Select gaps size
set $gaps_in_size 6
set $gaps_out_size -2

# Select terminal and file manager
#set $term xst -g=89x32
set $term alacritty
set $files nautilus --new-window

# Select launcher and window_tabber
set $launcher rofi -show drun -no-default-config -config /home/$USER/.config/rofi/main.rasi
set $window_tabber rofi -show window -no-default-config -config /home/$USER/.config/rofi/alt_tab.rasi
#set $power_menu exec /home/$USER/.local/bin/rofi-powermenu

# Select default workspace layout (default|stacking|tabbed)
workspace_layout default
workspace_auto_back_and_forth yes

##############################################################################
font pango:$font
# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
#exec --no-startup-id dex --autostart --environment i3

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
#exec --no-startup-id nm-applet

##############
# AUDIO KEYS #
##############
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.local/bin/volume_control up && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.local/bin/volume_control down && $refresh_i3blocks

bindsym XF86AudioMute    exec --no-startup-id ~/.local/bin/volume_control mute && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

bindsym XF86AudioPlay  exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext  exec --no-startup-id playerctl next
bindsym XF86AudioPrev  exec --no-startup-id playerctl previous


###################
# BRIGHTNESS KEYS #
###################
bindsym XF86MonBrightnessUp exec   --no-startup-id ~/.local/bin/dunst-brightness
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.local/bin/dunst-brightness

############
# KEYBINDS #
############
# Global Modifier Key
set $mod Mod4

# Mouse keybinds
floating_modifier $mod
bindsym --release button2 kill
bindsym --whole-window $mod+button2 kill

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

### Launch apps
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+e exec --no-startup-id $files

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id $launcher

# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop
set_from_resource $selbg st.color5
set_from_resource $bg st.background
bindsym $mod+shift+d exec --no-startup-id dmenu_run -p "RUN:" -fn ":size=14" -nb "$bg" -sb "$selbg"
bindsym $mod+Tab exec --no-startup-id $window_tabber
bindsym $mod+x exec --no-startup-id ~/.local/bin/rofi-asroot
bindcode $mod+49 exec --no-startup-id ~/.local/bin/i3-rofi-scratchpads

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# lock
bindsym $mod+Ctrl+l exec --no-startup-id ~/.config/i3/scripts/i3exit lock

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


### WINDOWS & CONTAINERS
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split orientation
bindsym $mod+z split h;exec notify-send 'tile horizontally'
bindsym $mod+v split v;exec notify-send 'tile vertically'
bindsym $mod+n split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle sticky for current container
bindsym $mod+Shift+s sticky toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child


##############
# WORKSPACES #
##############
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 1: 
set $ws2 2:󰀻 
set $ws3 3: 
set $ws4 4: 
set $ws5 5: 
set $ws6 6: 
set $ws7 "7"
set $ws8 8: 
set $ws9 9: 
set $ws10 10: 

focus_wrapping no

# switch to workspace next/previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# move focused container to workspace next/previous
#bindsym $mod+Shift+h move container to workspace prev
#bindsym $mod+Shift+l move container to workspace next

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10


#########
# MODES #
#########
# resize window (you can also use the mouse for that)
set $modeResize "Resize: ( < > h l | ⌄ ^ j k )  ESC/Enter to exit"
mode $modeResize {
        bindsym h resize shrink width 3 px or 3 ppt
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize grow width 3 px or 3 ppt

        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode $modeResize

# control system session
set $modeSession "System: (l)ock, (s)uspend, (r)eboot, (p)oweroff"
set $i3exit ~/.config/i3/scripts/i3exit
mode $modeSession {
        bindsym l exec --no-startup-id $i3exit lock, mode "default"
        bindsym s exec --no-startup-id $i3exit suspend, mode "default"
        bindsym r exec --no-startup-id $i3exit reboot, mode "default"
        bindsym p exec --no-startup-id $i3exit poweroff, mode "default"
        
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+q mode $modeSession


#########
# RULES #
#########
# assign to workspace
assign [class="Brave"]              $ws1
assign [class="mpv"]                $ws10
assign [class="Signal"]             $ws6
assign [class="virt-manager"]       $ws9
assign [class="MATLAB"]             $ws5

# automatic focus for windows opening on different worskpace
for_window [class="Brave"]          focus
for_window [class="mpv"]            focus
for_window [class="Signal"]         focus
for_window [class="virt-manager"]   focus
for_window [class="MATLAB"]         focus

# assign floating
for_window [class="Signal"]             floating enable
for_window [class="calculator"]         floating enable
for_window [class="Eog"]                floating enable
for_window [class="steam"]              floating enable
for_window [class="Project Zomboid"]    floating enable
for_window [class="Lutris"]             floating enable
for_window [class="Lxappearance"]       floating enable
for_window [title="alsamixer"]			floating enable, border pixel 0, resize set 800 600
for_window [title="nmtui"]              floating enable, border pixel 0, resize set 900 700
for_window [class="MATLAB"]             floating enable
for_window [class="kooha"]              floating enable

### Scratchpads
bindsym $mod+Shift+t exec ~/.config/i3/scripts/i3_scratchpad_show_create 'scratch-term' $term

# move the currently focused window to the scratchpad
bindsym $mod+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+equal scratchpad show


##########
# COLORS #
##########
set_from_resource $black   st.color0
set_from_resource $red     st.color1
set_from_resource $green   st.color2
set_from_resource $yellow  st.color3
set_from_resource $blue    st.color4
set_from_resource $purple  st.color5
set_from_resource $cyan    st.color6
set_from_resource $white   st.color7
set_from_resource $black2  st.color8
set_from_resource $red2    st.color9
set_from_resource $green2  st.color10
set_from_resource $yellow2 st.color11
set_from_resource $blue2   st.color12
set_from_resource $purple2 st.color13
set_from_resource $cyan2   st.color14
set_from_resource $white2  st.color15
set_from_resource $bg      st.background
set_from_resource $txt     st.foreground

client.background       $bg
# class                 border   bground  text    indicator child_border
client.focused          $purple  $bg      $txt    $blue     $purple
client.focused_inactive $black2  $bg      $txt    $black    $bg
client.unfocused        $black2  $bg      $txt    $black    $bg
client.urgent           $red     $bg      $txt    $red      $red
client.placeholder      $bg      $bg      $txt    $bg       $bg


#######
# BAR #
#######
bar {
        #status_command i3status -c /home/$USER/.config/i3/i3status.conf
        status_command i3blocks -c /home/$USER/.config/i3/i3blocks.conf
        position top
        strip_workspace_numbers no
        colors {
	            separator       $purple
		        background      $bg
		        statusline      $txt
#               class      	    	border 		    bg		    txt	    	indicator
		        focused_workspace	$purple    	    $blue		$bg     	$yellow
		        active_workspace	$black2         $purple     $txt    	$yellow
		        inactive_workspace	$black2      	$black  	$txt		$yellow
		        urgent_workspace	$white    	    $red    	$txt		$yellow
        }
}


###########
# BORDERS #
###########
# normal, pixel <size>, none
default_border $border_style
default_floating_border $border_style_float
hide_edge_borders smart_no_gaps


########
# GAPS #
########
gaps inner $gaps_in_size
gaps outer $gaps_out_size
smart_gaps on


#############
# AUTOSTART #
#############
exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1
exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=ssh,secrets,pkcs11
exec --no-startup-id /usr/bin/pipewire
exec --no-startup-id /usr/bin/pipewire-pulse
exec --no-startup-id /usr/bin/xwallpaper --maximize /home/$USER/.config/background
exec --no-startup-id /home/$USER/.local/bin/onlogin.sh
exec --no-startup-id /home/$USER/.local/bin/low_battery &
# Change language
exec_always --no-startup-id "/usr/bin/setxkbmap -model pc105 -layout us,gr -option grp:alt_shift_toggle"
